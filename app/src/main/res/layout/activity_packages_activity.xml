<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.pristinetravel.pristinetravels.Packages_activity"
    android:padding = "1dp"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#000000">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation= "vertical"
            android:layout_weight="0.5"
            android:background="#FFFFFF">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fill in these fields..."
                android:textSize="18dp"
                android:gravity="center_horizontal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop = "5dp">
                <EditText
                    android:id = "@+id/et_number_adult"
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint = "@string/number_of_adults"
                    android:inputType="number"
                    android:textSize="14sp"/>
                <EditText
                    android:id = "@+id/et_child_pack"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="match_parent"
                    android:hint = "No. of Child(ren)"
                    android:textSize="14sp"
                    android:inputType="number"
                    />
            </LinearLayout>
            <EditText
                android:id = "@+id/et_childage_pack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop= "5dp"
                android:hint = "@string/hint_d"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_marginTop = "5dp"
                android:background="#FFFFFF"
                >
                <EditText
                    android:id="@+id/et_date_from_pack"
                    android:layout_weight = "0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:inputType="date"
                    android:hint = "@string/start_date"
                    />
                <EditText
                    android:id="@+id/et_rooms"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:hint="@string/rooms_required"
                    android:inputType="number"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#FFFFFF">
            <Button
                android:id="@+id/but_conf_pack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm"/>
            <Button
                android:id="@+id/but_change_pack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:text="Change"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:gravity="center"
            android:text = " POPULAR - PACKAGES "/>
        <Button
            android:id = "@+id/but_Aus"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="?android:attr/selectableItemBackground"
            android:textColor = "#FFFFFF"
            android:text="Australia"/>
        <Button
            android:id = "@+id/but_NZ"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="?android:attr/selectableItemBackground"
            android:textColor = "#FFFFFF"
            android:text="New Zealand"/>
        <Button
            android:id = "@+id/but_Sing"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="?android:attr/selectableItemBackground"
            android:textColor = "#FFFFFF"
            android:text="Singapore"/>
        <Button
            android:id="@+id/but_Dub"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="?android:attr/selectableItemBackground"
            android:textColor = "#FFFFFF"
            android:text="America"/>
        <Button
            android:id = "@+id/but_Thai"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="?android:attr/selectableItemBackground"
            android:textColor = "#FFFFFF"
            android:text="Thailand"/>
        <Button
            android:id = "@+id/but_Eur1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="?android:attr/selectableItemBackground"
            android:textColor = "#FFFFFF"
            android:text="Western Europe"/>
        <Button
            android:id = "@+id/but_Eur2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="?android:attr/selectableItemBackground"
            android:textColor = "#FFFFFF"
            android:text="Eastern Europe"/>
        <Button
            android:id = "@+id/but_UK"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="?android:attr/selectableItemBackground"
            android:textColor = "#FFFFFF"
            android:text = "United Kingdom"/>
    </LinearLayout>
</ScrollView>