<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pristinetravel.pristinetravels.MainActivity">


    <TextView
        android:id="@+id/textView_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="About Us"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

    <TextView
        android:id="@+id/textView_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_heading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="@string/about_us_text"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_info"
        android:gravity="center_horizontal"
        android:layout_marginTop="29dp"
        android:text="Contact Details "
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />



    <TextView
        android:id="@+id/textView_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_contact"
        android:layout_marginTop="17dp"
        android:text="Website link"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    <TextView
        android:id="@+id/textView_phoneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_below="@id/textView_link"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="     Phone Number - " />
    <TextView
        android:id="@+id/textView_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_below="@id/textView_link"
        android:layout_toRightOf="@id/textView_phoneLabel"
        android:background="#ADD8E6"
        android:autoLink="all|phone"
        android:textSize="20sp"
        android:text="+91-033-4018-5454" />
    <TextView
        android:id="@+id/textView_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_below="@id/textView_phoneLabel"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="     Email ID- " />
    <TextView
        android:id="@+id/textView_emailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_below="@id/textView_phone"
        android:layout_toRightOf="@id/textView_email"
        android:background="#ADD8E6"
        android:autoLink="email"
        android:textSize="20sp"
        android:text="sarrof@yahoo.co.uk" />

</RelativeLayout>
