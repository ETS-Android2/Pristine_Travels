<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="#000000"
        android:padding="5dp"
        >
        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id = "@+id/vf_custom"
            android:scaleType = "fitXY">
        </ViewFlipper>
        <ImageButton
            android:id="@+id/imagebutton_custom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/customized"
            android:background="#000000"
            android:alpha = "0"
            android:scaleType="fitXY"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#000000"
        android:padding="5dp"
        >
        <RelativeLayout
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#000000">
            <ViewFlipper
                android:id = "@+id/vf_about"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY">
            </ViewFlipper>
            <ImageButton
                android:id="@+id/imagebutton_contact"
                android:layout_height="match_parent"
                android:src="@drawable/about_us"
                android:alpha = "0"
                android:layout_width="match_parent"
                android:scaleType="fitXY"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#000000">
            <ViewFlipper
                android:id = "@+id/vf_pack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType = "fitXY">
            </ViewFlipper>
            <ImageButton
                android:id="@+id/imagebutton_pack"
                android:layout_height="match_parent"
                android:src="@drawable/packages"
                android:layout_width="match_parent"
                android:alpha = "0"
                android:scaleType="fitXY"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>






